{% extends 'base.html.twig' %}

{% block title %}Auteurs{% endblock %}

{% block content %}
    <div class="container mt-5">
        <h1>Liste des employes</h1>

        {% if employes is not empty %}
            <div class="table-responsive">
                <table class="table table-striped table-bordered table-hover shadow table-custom">
                    <thead class="thead-dark">
                    <tr>
                        <th>Nom</th>
                        <th>Prénom</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for employe in employes %}
                        <tr>
                            <td>{{ employe.nom }}</td>
                            <td>{{ employe.prenom }}</td>
                            <td><a style="border: unset" href="detail/{{ employe.id }}">Détails</a></td>
                            <td><a style="border: unset" href="ajout/{{ employe.id }}">Modifier</a></td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        {% else %}
            <div class="alert alert-info alert-custom" role="alert">
                Aucun employé trouvé.
            </div>
        {% endif %}
        <a href="{{ path('employe_ajout') }}">Ajouter un employé</a>
    </div>
{% endblock %}
