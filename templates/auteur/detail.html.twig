{% extends 'base.html.twig' %}

{% block title %}Détails de l'auteur{% endblock %}

{% block stylesheets %}

{% endblock %}

{% block content %}
    <div class="container mt-5">
        <h1>Détails de l'auteur</h1>

        <table class="table-custom">
            <thead>
            <tr>
                <th scope="col">Libelle</th>
                <th scope="col">Valeur</th>
            </tr>
            </thead>
            <tbody>
            <tr>
                <th scope="row"> id </th>
                <td>{{ auteur.id }}</td>
            </tr>
            <tr>
                <th scope="row"> nom </th>
                <td>{{ auteur.nom }}</td>
            </tr>
            <tr>
                <th scope="row"> prenom </th>
                <td>{{ auteur.prenom }}</td>
            </tr>
            </tbody>
        </table>
    </div>
    <a href="/auteur">Retour à la liste</a>
{% endblock %}