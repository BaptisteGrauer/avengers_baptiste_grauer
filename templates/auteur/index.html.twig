{% extends 'base.html.twig' %}

{% block title %}Auteurs{% endblock %}

{% block content %}
    <div class="container mt-5">
        <h1>Liste des auteurs</h1>

        {% if auteurs is not empty %}
            <div class="table-responsive">
                <table class="table table-striped table-bordered table-hover shadow table-custom">
                    <thead class="thead-dark">
                    <tr>
                        <th>Nom</th>
                        <th>Prénom</th>
{#                        <th>Date de parution</th>#}
                    </tr>
                    </thead>
                    <tbody>
                    {% for auteur in auteurs %}
                        <tr>
                            <td>{{ auteur.nom }}</td>
                            <td>{{ auteur.prenom }}</td>
                            <td><a style="border: unset" href="detail/{{ auteur.id }}">Détails</a></td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        {% else %}
            <div class="alert alert-info alert-custom" role="alert">
                Aucun livre trouvé.
            </div>
        {% endif %}
    </div>
{% endblock %}
