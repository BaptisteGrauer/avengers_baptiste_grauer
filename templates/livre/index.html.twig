{% extends 'base.html.twig' %}

{% block title %}Livres{% endblock %}

{% block content %}
    <div class="container mt-5">
        <h1>Liste des Livres</h1>

        {% if livres is not empty %}
            <div class="table-responsive">
                <table class="table table-striped table-bordered table-hover shadow table-custom">
                    <thead class="thead-dark">
                    <tr>
                        <th>Titre</th>
                        <th>Auteur</th>
                        <th>Date de parution</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for livre in livres %}
                        <tr>
                            <td>{{ livre.titre }}</td>
                            <td>{{ livre.auteur }}</td>
                            <td>{{ livre.datePublication|date('Y-m-d')}}</td>
                            <td><a style="border: unset" href="details/{{ livre.id }}">Détails</a></td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        {% else %}
            <div class="alert alert-info alert-custom" role="alert">
                Aucun livre trouvé.
            </div>
        {% endif %}
    </div>
{% endblock %}
