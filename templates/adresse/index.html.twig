{% extends 'base.html.twig' %}

{% block title %}Adresses{% endblock %}

{% block content %}
    <div class="container mt-5">
        <h1>Liste des adresses</h1>

        {% if adresses is not empty %}
            <div class="table-responsive">
                <table class="table table-striped table-bordered table-hover shadow table-custom">
                    <thead class="thead-dark">
                    <tr>
                        <th>Adresse</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for adresse in adresses %}
                        <tr>
                            <td>{{ adresse.adresse }}</td>
                            <td><a style="border: unset" href="detail/{{ adresse.id }}">Détails</a></td>
                            <td><a style="border: unset" href="ajout/{{ adresse.id }}">Modifier</a></td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        {% else %}
            <div class="alert alert-info alert-custom" role="alert">
                Aucun adresse trouvé.
            </div>
        {% endif %}
        <a href="{{ path('adresse_ajout') }}">Ajouter une adresse</a>
    </div>
{% endblock %}
